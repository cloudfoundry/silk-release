---
processes:
  - name: silk-daemon
    executable: "/var/vcap/packages/silk-daemon/bin/silk-daemon"
    args:
    - "-config=/var/vcap/jobs/silk-daemon/config/client-config.json"
    additional_volumes:
    - path: /var/vcap/data/container-metadata
      writable: true
    capabilities:
    - NET_ADMIN
    unsafe:
      privileged: true
  - name: silk-daemon-healthchecker
    executable: "/var/vcap/packages/silk-daemon/bin/healthchecker"
    args:
    - "-c"
    - "/var/vcap/jobs/silk-daemon/config/healthchecker.yml"
    additional_volumes:
      - path: /var/vcap/data/silk-daemon/counters
        writable: true
