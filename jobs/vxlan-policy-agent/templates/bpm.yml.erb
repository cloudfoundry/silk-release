---
processes:
  - name: vxlan-policy-agent
    unsafe:
      privileged: true
    executable: "/var/vcap/jobs/vxlan-policy-agent/bin/start"
    additional_volumes:
    - path: /var/vcap/data/container-metadata
      writable: true
    - path: /var/vcap/data/garden-cni
      writable: true
    capabilities:
    - NET_RAW
    - NET_ADMIN
